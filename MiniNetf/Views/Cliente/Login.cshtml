@model MiniNext.Models.Cliente

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
</head>
<body>
    @using (Html.BeginForm("Login", "Cliente", FormMethod.Post))
    {
        <table cellpadding="0" cellspacing="0">
            <tr>
                <th colspan="2" align="center">Login Cliente</th>
            </tr>
            <tr>
                <td>Email: </td>
                <td>
                    @Html.TextBoxFor(m => m.Email)
                </td>
            </tr>
            <tr>
                <td>Contraseña: </td>
                <td>
                    @Html.PasswordFor(x => x.Contraseña, new { @class = "form-control" })
                </td>
                @*<td>Contraseña: </td>
                    <td>
                        @Html.Encode
                        @Html.TextBoxFor(m => m.Contraseña)
                    </td>*@
            </tr>
            <tr>
                <td></td>
                <td><input type="submit" value="Acceder" /></td>
            </tr>
        </table>
    }
</body>
</html>



